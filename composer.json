{
    "name": "rkr/class-finder",
    "description": "A tool to find full qualified class-names from a list of files",
    "type": "library",
    "license": "MIT",
    "keywords": ["class", "finder"],
    "require": {
        "nikic/php-parser": ">= 4.14"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": ">= 0.1"
    },
    "autoload": {
        "psr-4": {
            "Kir\\ClassFinder\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kir\\ClassFinder\\": "tests/"
        }
    },
    "scripts": {
        "phpstan": "phpstan analyse -c phpstan.neon --memory-limit=2G"
    }
}
